@model IEnumerable<PortalNewsMVC.Models.Domain.Role>

@{
    
    ViewBag.Title = "سطح دسترسی جدید";
    Layout = "~/Areas/Administrator/Views/Shared/_Shared.cshtml";

}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت سطح های دسترسی</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<br />
<p>

    @Html.ActionLink("تعریف سطح دسترسی جدید", "Create", null, new { @class = "btn btn-danger" })
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.RoleID }, new { @class = "btn btn-success btn-xs" }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.RoleID }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.RoleID }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
