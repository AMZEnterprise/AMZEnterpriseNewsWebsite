@model IEnumerable<PortalNewsMVC.Models.Domain.News>

<h4 class="side">
    محبوب پست ها
</h4>

<div class="edit-pics">
    @foreach (var item in Model)
    {
        <div class="editor-pics">
            <div class="col-md-3 item-pic">
                <img src="~/Upload/Images/Thumb/@item.NewsImage" class="img-responsive" alt="@item.NewsTitle" />

            </div>
            <div class="col-md-9 item-details">
                <h5 class="inner two"><a href="/Home/SinglePage/@item.NewsID">@item.NewsTitle</a></h5>
                <div class="td-post-date two">
                    <i class="glyphicon glyphicon-time">
                    </i>@item.NewsDate.ToString("yyyy/MM/dd") <a href="/Home/SinglePage/@item.NewsID"><i class="glyphicon glyphicon-comment"></i>0 </a>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    }
</div>
<!--//edit-pics-->
