@model IEnumerable<PortalNewsMVC.Models.Domain.Site>

@{
    ViewBag.Title = "تنظیمات";
    Layout = "~/Areas/Administrator/Views/Shared/_Shared.cshtml";
}

<h2>تنظیمات سایت</h2>

<p>
    @{
        if (Model.Count() <= 0)
        {
            @Html.ActionLink("جدید", "Create", null, new { @class = "btn btn-danger" })
        }
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SiteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteAbout)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SiteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteAbout)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.SiteID } , new { @class = "btn btn-default btn-sm" }) |
            @Html.ActionLink("نمایش جزئیات", "Details", new { id=item.SiteID } , new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.SiteID } , new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
