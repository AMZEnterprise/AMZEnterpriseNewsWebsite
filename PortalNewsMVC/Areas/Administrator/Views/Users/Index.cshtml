@model IEnumerable<PortalNewsMVC.Models.Domain.User>

@{
    ViewBag.Title = "مدیریت کاربران";
    Layout = "~/Areas/Administrator/Views/Shared/_Shared.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<br />

<p>
    @Html.ActionLink("کاربر جدید", "Create", null, new { @class = "btn btn-danger" })
</p>
<table class="table table-bordered table-condensed table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.RoleTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleTitle)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.UserID },new { @class = "btn btn-success btn-xs" }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.UserID }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.UserID },new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
